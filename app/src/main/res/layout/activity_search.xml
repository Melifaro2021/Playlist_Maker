<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <!-- Строка 1 Настройки -->
        <LinearLayout
            style="@style/page_search_string_head">
            <!-- Стрелка назад -->
            <ImageView
                android:src="@drawable/ico_arr_back"
                android:contentDescription="@string/arr"
                style="@style/page_settings_arr_back" />
            <!-- Заголовок  -->
            <TextView
                style="@style/page_settings_txt_settings"
                android:text="@string/search" />
        </LinearLayout>
        <!-- Поисковая строка -->
        <LinearLayout  style="@style/page_search_search_string" >
            <ImageView style="@style/page_search_ico"
                app:srcCompat="@drawable/ico_search24" />
            <EditText style="@style/page_search_placeholder" />
        </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>