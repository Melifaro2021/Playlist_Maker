<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- РЕСУРСЫ НА СТРАНИЦЕ -->
    <style name="page_main_res">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- ГЛАВНАЯ СТРАНИЦА (фон и заголовок) -->
    <style name="page_main">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Расположение -->
        <item name="android:orientation">vertical</item>
        <!-- Цвет фона -->
        <item name="android:background">@color/background_color</item>
        <!-- Отступы -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
    </style>
    <!-- ЗАГОЛОВОК ПРИЛОЖЕНИЯ -->
    <style name="page_main_head">
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">start</item>
        <!-- Цвет шрифта -->
        <item name="android:textColor">@color/white</item>
        <!-- Начертание шрифта -->
        <item name="android:textStyle">bold</item>
        <!-- Размер шрифта -->
        <item name="android:textSize">@dimen/head22</item>
    </style>
    <!-- БОКС ДЛЯ ТРЕХ КНОПОК -->
    <style name="page_main_box_for_btn">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Расположение -->
        <item name="android:orientation">vertical</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:paddingRight">@dimen/pad16dp</item>
        <item name="android:paddingLeft">@dimen/pad16dp</item>
        <item name="android:paddingBottom">28dp</item>
    </style>
    <!-- Стили кнопок -->
    <style name="page_main_btn" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">center</item>
        <item name="iconGravity">textStart</item>
        <!-- Цвет шрифта -->
        <item name="android:textColor">@color/black</item>
        <!-- Размер шрифта -->
        <item name="android:textSize">@dimen/head26</item>
        <!-- Начертание шрифта -->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <!-- Регистр шрифта -->
        <item name="android:textAllCaps">false</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">@dimen/pad16dp</item>
        <item name="android:paddingLeft">@dimen/pad16dp</item>
        <item name="android:paddingRight">@dimen/pad16dp</item>
        <!-- Цвет фона -->
        <item name="android:backgroundTint">@color/white</item>
        <!-- Цвет иконки -->
        <item name="iconTint">@color/black</item>
        <!-- Закругление уголков кнопки -->
        <item name="cornerRadius">16dp</item>
        <!-- Эффект "подсветки" при нажатии на элемент интерфейса -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>