<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Бокс для Заголовока страницы и фон страницы -->
    <style name="pageMain_box_for_Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
    </style>
    <!-- Заголовок страницы -->
    <style name="pageMain_Head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/head22</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Бокс для трех кнопок -->
    <style name="pageMain_box_for_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:paddingRight">@dimen/pad16dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingLeft">@dimen/pad16dp</item>
    </style>
    <!-- Стили кнопок -->
    <style name="pageMain_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/head26</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/pad16dp</item>
        <item name="android:paddingLeft">@dimen/pad16dp</item>
        <item name="android:paddingRight">@dimen/pad16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>