<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="page_search_string_head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/txt_Settings_Page</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/pad4dp</item>
        <item name="android:paddingRight">52dp</item>
        <item name="android:paddingBottom">@dimen/pad4dp</item>
        <item name="android:paddingLeft">@dimen/pad4dp</item>
    </style>

    <!-- Строка поиска -->
    <style name="page_search_search_string">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@color/greySearch</item>

        <item name="android:paddingRight">40dp</item>

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>


        <item name="android:hint">Search input field</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">15</item>
        <item name="android:contentDescription">Search input field</item>
</style>
<!-- Иконка поиска -->
    <style name="page_search_ico">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">#E6E8EB</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">4dp</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>
    <style name="page_search_placeholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>