<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ЭКРАН СТРАНИЦЫ ПОИСКА -->
    <style name="page_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- СТРЕЛКА НАЗАД -->
    <style name="page_search_arr_back">
        <!-- Svg иконка -->
        <item name="android:src">@drawable/ico_arr_back</item>
        <!-- Размеры -->
        <item name="android:layout_width">@dimen/ico48</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/search_page_ico_arr_back</item>
        <!-- Отступы -->
        <item name="android:padding">@dimen/pad12dp</item>
        <!-- Описание -->
        <item name="android:contentDescription">@string/arr</item>
    </style>
    <!-- ЗАГОЛОВОК СТРАНИЦЫ ПОИСКА -->
    <style name="page_search_string_head">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Размер текста -->
        <item name="android:textSize">@dimen/head26</item>
        <!-- Цвет текста -->
        <item name="android:textColor">@color/search_page_head</item>
        <!-- Отступы -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">86dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
    </style>
    <!-- ПОЛЕ ПОИСКА, не путать с вводом строки -->
    <style name="page_search_search_string">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <!-- Фон -->
        <item name="android:background">@drawable/search_background</item>
        <!-- Ориентация -->
        <item name="android:orientation">horizontal</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>
    <!-- ИКОНКА ЛУПЫ -->
    <style name="page_search_loupe">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/ico_search24</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@id/inputEditText</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/search_page_ico</item>
        <!-- Отступы -->
        <item name="android:paddingTop">@dimen/pad12dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
    </style>
    <!-- ИКОНКА КРЕСТИКА  -->
    <style name="page_search_x">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/x</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/search_page_ico</item>
        <!-- Отступы-->
        <item name="android:paddingLeft">@dimen/pad12dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
        <!-- Видимость -->
        <!--item name="android:visibility">gone</item-->
    </style>
    <!-- СТРОКА ВВОДА ТЕКСТА -->
    <style name="page_search_placeholder">
        <!-- Размеры -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintStart_toEndOf">@+id/ico_search_loupe</item>
        <item name="layout_constraintEnd_toStartOf">@+id/clearSearchFieldIcon</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <!-- подсказка placeholder -->
        <item name="android:hint">@string/search</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/search_page_txt_input</item>
        <item name="android:autofillHints">@string/search</item>
        <!-- Настройка строки поиска -->
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">text</item>
    </style>
</resources>