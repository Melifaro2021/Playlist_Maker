<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ЭКРАН СТРАНИЦЫ ПОИСКА -->
    <style name="page_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- ЗАГОЛОВОК СТРАНИЦЫ ПОИСКА -->
    <style name="page_search_string_head">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Иконка -->
        <item name="navigationIcon">@drawable/ico_arr_back</item>
        <!-- Размер текста -->
        <item name="android:textSize">@dimen/head26</item>
        <!-- Цвет текста -->
        <item name="android:textColor">@color/search_page_head</item>
        <!-- Расположение -->
        <item name="layout_constraintTop_toTopOf">parent</item>
        <!-- Отступы -->
        <item name="android:paddingRight">86dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
</style>
<!-- ПОЛЕ ПОИСКА, не путать с вводом строки -->
    <style name="page_search_search_string">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <!-- Фон -->
        <item name="android:background">@drawable/search_background</item>
        <!-- Ориентация -->
        <item name="android:orientation">horizontal</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <!-- ИКОНКА ЛУПЫ -->
    <style name="page_search_loupe">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/ico_search24</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@id/inputEditText</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/search_page_ico</item>
        <!-- Отступы -->
        <item name="android:paddingTop">@dimen/pad12dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
    </style>
    <!-- ИКОНКА КРЕСТИКА  -->
    <style name="page_search_x">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/x</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/search_page_ico</item>
        <!-- Отступы-->
        <item name="android:paddingLeft">@dimen/pad12dp</item>
        <item name="android:paddingRight">@dimen/pad12dp</item>
        <!-- Видимость -->
        <!--item name="android:visibility">gone</item-->
    </style>
    <!-- СТРОКА ВВОДА ТЕКСТА -->
    <style name="page_search_placeholder">
        <!-- Размеры -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="layout_constraintStart_toEndOf">@+id/ico_search_loupe</item>
        <item name="layout_constraintEnd_toStartOf">@+id/clearSearchFieldIcon</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <!-- подсказка placeholder -->
        <item name="android:hint">@string/search</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/search_page_txt_input</item>
        <item name="android:autofillHints">@string/search</item>
        <!-- Настройка строки поиска -->
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">text</item>
        <!-- Атрибуты ниже сделают на клавиатуре в правой нижней
         её части кнопку переноса строки будет заменена на кнопку Done: -->
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- БЛОК НИЧЕГО НЕ НАЙДЕНО -->
    <style name="error_layout">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <!-- Ориентация -->
        <item name="android:orientation">vertical</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- КАРТИНКА ОШИБКИ -->
    <style name="imgError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>-->
    <!-- КАРТИНКА НЕТ ИНТЕРНЕТА -->
    <style name="errorsNoInternet">
        <item name="android:src">@drawable/errors_no_internet_light</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- КАРТИНКА НЕТ РЕЗУЛЬТАТОВ ПОИСКА -->
    <style name="errorsNoSearchResult">
        <item name="android:src">@drawable/errors_no_search_result_light</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- ТЕКСТ ОШИБКИ -->
    <style name="txtError">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Размер шрифта -->
        <item name="android:textSize">@dimen/text18</item>
        <!-- Начертание шрифта -->
        <item name="android:textStyle">bold</item>
        <!-- Расположение -->
        <item name="android:gravity">center</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <!-- КНОПКА ОБНОВИТЬ -->
    <style name="RefreshButton">
        <!-- Текст -->
        <item name="android:text">@string/refresh</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">center</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">24dp</item>
        <!-- Цвет кнопки -->
        <item name="android:backgroundTint">@color/search_page_refresh_btn</item>
        <!-- Цвет текста-->
        <item name="android:textColor">@color/search_page_refresh_btn_txt</item>
        <!-- Начертание -->
        <item name="android:textAllCaps">false</item>
        <!-- Размер шрифта -->
        <item name="android:textSize">@dimen/text16</item>
        <!-- Закругление -->
        <item name="cornerRadius">54dp</item>
    </style>
</resources>