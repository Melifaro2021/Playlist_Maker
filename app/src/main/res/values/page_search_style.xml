<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ЭКРАН СТРАНИЦЫ ПОИСКА -->
    <style name="page_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- СТРЕЛКА НАЗАД -->
    <style name="page_search_arr_back">
        <!-- Svg иконка -->
        <item name="android:src">@drawable/ico_arr_back</item>
        <!-- Размеры -->
        <item name="android:layout_width">@dimen/ico48</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/ico_search_page_arr_back</item>
        <!-- Отступы -->
        <item name="android:padding">@dimen/pad12dp</item>
        <!-- Описание -->
        <item name="android:contentDescription">@string/arr</item>
    </style>
    <!-- ЗАГОЛОВОК СТРАНИЦЫ ПОИСКА -->
    <style name="page_search_string_head">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Размер текста -->
        <item name="android:textSize">@dimen/head26</item>
        <!-- Отступы -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">86dp</item>
        <item name="android:paddingBottom">@dimen/pad12dp</item>
        <item name="android:paddingLeft">@dimen/pad12dp</item>
    </style>
    <!-- ПОЛЕ ПОИСКА, не путать с вводом строки -->
    <style name="page_search_search_string">
        <!-- Фон -->
        <item name="android:background">@drawable/search_background</item>
        <!-- Ориентация -->
        <item name="android:orientation">horizontal</item>
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <!-- ОБЕРТКА -->
    <style name="search_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<!-- ИКОНКА ЛУПЫ -->
    <style name="page_search_loupe">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/ico_search24</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">start</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/ico_search</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!-- ИКОНКА КРЕСТИКА  -->
    <style name="page_search_x">
        <!-- Svg иконка -->
        <item name="srcCompat">@drawable/x</item>
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Цвет иконки -->
        <item name="android:tint">@color/ico_search</item>
        <!-- Отступы -->
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <!-- Расположение -->
        <item name="android:layout_gravity">end</item>
        <!-- Видимость -->
        <item name="android:visibility">gone</item>
    </style>
    <!-- СТРОКА ВВОДА ТЕКСТА -->
    <style name="page_search_placeholder">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- отступ от иконки лупы -->
        <item name="android:layout_marginLeft">40dp</item>
        <!-- отступ от иконки крестика -->
        <item name="android:layout_marginRight">40dp</item>
        <!-- подсказка placeholder -->
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/black</item>
        <!-- Настройка строки поиска -->
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">text</item>
    </style>
</resources>